<resources>

    <style name="Text"/>

    <style name="Text.Small" parent="TextAppearance.AppCompat.Caption">
    </style>

    <style name="Text.Small.Inverse" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textColor">?android:textColorSecondaryInverse</item>
    </style>

    <style name="Text.Normal" parent="TextAppearance.AppCompat.Small">
    </style>

    <style name="Text.Normal.Inverse" parent="TextAppearance.AppCompat.Small.Inverse">
    </style>

    <style name="Text.Medium" parent="TextAppearance.AppCompat.Subhead">
    </style>

    <style name="Text.Medium.Inverse" parent="TextAppearance.AppCompat.Subhead.Inverse">
    </style>

    <style name="Text.Large" parent="TextAppearance.AppCompat.Large">
    </style>

    <style name="Text.Large.Inverse" parent="TextAppearance.AppCompat.Large.Inverse">
    </style>

    <style name="Text.Title" parent="TextAppearance.AppCompat.Title">
    </style>

    <style name="Text.AppName">
        <item name="android:textSize">@dimen/text_size_app_name</item>
        <item name="android:textColor">@color/color_app_name</item>
        <item name="fontFamily">@font/aclonica</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/selector_button_color</item>
    </style>

    <style name="Button.Borderless" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="Button.Icon" parent="Widget.AppCompat.ImageButton">
        <item name="android:minHeight">40dp</item>
        <item name="android:minWidth">40dp</item>
    </style>

</resources>

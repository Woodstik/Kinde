<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?selectableItemBackground"
    android:paddingStart="@dimen/spacing_medium"
    android:paddingEnd="@dimen/spacing_medium"
    android:paddingTop="@dimen/spacing_medium"
    android:paddingBottom="@dimen/spacing_medium">

    <ImageView
        android:id="@+id/imageInitial"
        android:layout_width="@dimen/size_circle_initial"
        android:layout_height="@dimen/size_circle_initial"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/bg_initial"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textInitial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/imageInitial"
        app:layout_constraintBottom_toBottomOf="@+id/imageInitial"
        app:layout_constraintStart_toStartOf="@+id/imageInitial"
        app:layout_constraintEnd_toEndOf="@+id/imageInitial"
        android:textAppearance="@style/Text.Medium.Inverse"
        tools:text="J"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Text.Medium"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="@dimen/spacing_medium"
        app:layout_constraintStart_toEndOf="@+id/imageInitial"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageInitial"
        app:layout_constraintBottom_toTopOf="@+id/textEmail"
        app:layout_constraintVertical_chainStyle="packed"
        android:textStyle="bold"
        tools:text="Jose"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/textName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textName"
        app:layout_constraintBottom_toBottomOf="@+id/imageInitial"
        android:textAppearance="@style/Text.Small"
        tools:text="woodstik92@gmail.com"/>
</androidx.constraintlayout.widget.ConstraintLayout>